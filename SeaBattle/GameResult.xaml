<Window x:Class="SeaBattle.GameResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaBattle"
        mc:Ignorable="d"
        Icon="icon.ico"
        ResizeMode="CanMinimize"      
        Title="GameResult" Height="190" Width="450">
    <Grid>
        <Border Style="{DynamicResource borderFrameStyle}">
            <StackPanel Background="CadetBlue">
                <Label Content="Количество выстрелов: " Name="labelCountShots" Style="{DynamicResource labelStatisticStyle}"/>
                <Label Content="Количество попаданий: " Name="labelCountHits"  Style="{DynamicResource labelStatisticStyle}"/>
                <Label Content="Время прохождения: " Name="labelTimer"  Style="{DynamicResource labelStatisticStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>